@model SpareProductModel

@{
    ViewBag.Title = "ExportProductAndSpares";
    Layout = null;
}
<style>
    tr:nth-child(even){
        background:#ccc;
    }
    tr:nth-child(odd){
        background:#fff;
    }
    .even{
        background:#ccc;
        font-size:12px;
    }
    .odd{
       
        background:#fff;
        font-size:12px;
    }
    
</style>

<h2>Export Spares List</h2>
@*<b>
    @Model.SpareProductList.Count()
</b>*@
<table style="border:1px solid #000000">
    <tr>
        <td colspan="6" style="text-align:center" style="background-color:#dddddd;border:1px solid #000000"><b>Spares</b></td>
        <td colspan="4" style="text-align:center" style="background-color:#dddddd; border:1px solid #000000"><b>Linked product
</b></td>
    </tr>
    <tr>
        <td style="background-color:#dddddd;border:1px solid #000000"><b>Brand</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000"><b>Code</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000"><b>Description</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000;width:70px"><b>Total shipped qty</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000"><b>Status</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000;width:110px"><b>How many months discontinued
</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000"><b>Product code</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000"><b>Product name</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000"><b>Status</b></td>
        <td style="background-color:#dddddd;border:1px solid #000000;width:110px"><b>How many months discontinued</b></td>
    </tr>
    @{
        var i =0 ;
    }
    @foreach (var item in @Model.SpareProductList)
    {
        <tr class="@(i %2==0?"even":"odd")">
            @*Spares*@
            @*<td>@item.spare_cprod</td>*@
            <td>@item.brand_name</td>
            <td>@item.cprod_code</td>
            <td style="width:200px">@item.desc</td>
            <td>@item.order_qty</td>
            <td>@(item.status == "D" ? "discontinued" : "live")</td>
            <td style="border:thin 1px black;">@(item.months == 0 ? "" : item.months.ToString())</td>

            @* Products *@
            @*<td>@item.product_cprod_id</td>*@
            <td>@item.product_cprod_code1</td>
            <td>@item.product_cprod_name</td>
            <td>@(item.product_cprod_status == "D" ? "discontinued" : "live") </td>
            <td>@(item.product_month == 0 ? "" : item.product_month.ToString()) </td>
            @*<td>@item.</td>*@
        </tr>
        i++;
    }
</table>
