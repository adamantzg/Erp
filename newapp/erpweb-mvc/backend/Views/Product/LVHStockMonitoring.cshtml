@using Utilities = company.Common.Utilities
@model LVHStockMonitoringModel


@{
    Layout = null;  //"~/Views/shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Big Company</title>
    <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>LVH stock monitoring</title>

    <style type="text/css">
        html {
            /*background-color: #e2e2e2;*/
            margin: 10px;
            padding: 10px;
        }

        body {
            font-family: "Open Sans","Helvetica Neue",Helvetica,Arial,sans-serif;
            font-size: 14px;
            line-height: 1.42857143;
            color: #666666;
            background-color: #ffffff;
            padding: 0;
            height: 100%;
            width: 100%;
            margin: 5px;
            display: block;
        }

        *:before, *:after {
            box-sizing: border-box;
        }

        .text-right {
            text-align: right;
        }

        .text-left {
            text-align: left;
        }

        .text-center {
            text-align: center;
        }

        th {
            border: 1px solid #dddddd;
            padding: 1px 5px;
        }

        td {
            border: 1px solid #dddddd;
            padding: 1px 5px;
        }

        .logo {
            width: 100%;
            float: left;
            /*background:#999;*/
        }

            .logo img {
                width: 300px;
                margin: 10px 10px 50px 10px;
                float: left;
                text-align: left;
            }
    </style>

</head>

<body>
    <div class="container">
        <div class="main">
            <div id="content" class="content">

                <div class="logo"><a href="#"><img src="http://newapp.bigcompany.com/images/Logo.jpg" alt="logo" width="200" /></a></div>


                <div>
                    <div style="margin: 10px;">
                        <h3></h3>
                    </div>

                    <div style="margin: 10px;">
                        <table style="table-layout:auto; width:1200px; margin-bottom:0px;border-width: 1px; border: 1px solid #dddddd; border-spacing: 0px;border-collapse:collapse">
                            <thead>
                                <tr>
                                    <th colspan="3"><div class="text-left">LVH stock for the following products has now dropped to zero:</div></th>
                                </tr>
                                <tr>
                                    <td colspan="3"></td>
                                </tr>
                                <tr>
                                    <th><div class="text-left">CODE</div></th>
                                    <th><div class="text-left">DESCRIPTION</div></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.lvhProducts)
                                {
                                    <tr>
                                        <td>@v.cprod_code1</td>
                                        <td>@v.cprod_name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

